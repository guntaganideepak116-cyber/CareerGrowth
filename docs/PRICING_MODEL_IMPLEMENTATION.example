## 3Ô∏è‚É£ BACKEND IMPLEMENTATION

### Step 1: Create Subscription Routes

```typescript
// backend/src/routes/subscriptions.ts

import { Router, Request, Response } from 'express';
import { verifyToken } from '../middleware/adminMiddleware';
import { db } from '../config/firebase';
import Razorpay from 'razorpay';
import crypto from 'crypto';

const router = Router();

// Initialize Razorpay
const razorpay = new Razorpay({
  key_id: process.env.RAZORPAY_KEY_ID || '',
  key_secret: process.env.RAZORPAY_KEY_SECRET || '',
});

// Pricing configuration
const PRICING_PLANS = {
  pro_monthly: { amount: 9900, currency: 'INR', plan: 'pro', interval: 'month' }, // ‚Çπ99 in paise
  pro_yearly: { amount: 95000, currency: 'INR', plan: 'pro', interval: 'year' },
  premium_monthly: { amount: 49900, currency: 'INR', plan: 'premium', interval: 'month' },
  premium_yearly: { amount: 479000, currency: 'INR', plan: 'premium', interval: 'year' },
};

// GET - Check user's current subscription
router.get('/status', verifyToken, async (req: Request, res: Response) => {
  try {
    const userId = (req as any).userId;

    const subscriptionDoc = await db.collection('subscriptions')
      .where('userId', '==', userId)
      .where('status', '==', 'active')
      .limit(1)
      .get();

    if (subscriptionDoc.empty) {
      return res.json({
        plan: 'free',
        status: 'active',
        features: ['Basic features'],
      });
    }

    const subscription = subscriptionDoc.docs[0].data();
    
    res.json({
      plan: subscription.plan,
      status: subscription.status,
      startDate: subscription.startDate,
      endDate: subscription.endDate,
      autoRenew: subscription.autoRenew,
    });
  } catch (error) {
    console.error('Error fetching subscription:', error);
    res.status(500).json({ error: 'Failed to fetch subscription' });
  }
});

// POST - Create payment order
router.post('/create-order', verifyToken, async (req: Request, res: Response) => {
  try {
    const userId = (req as any).userId;
    const { planId } = req.body; // e.g., 'pro_monthly'

    if (!PRICING_PLANS[planId as keyof typeof PRICING_PLANS]) {
      return res.status(400).json({ error: 'Invalid plan' });
    }

    const planDetails = PRICING_PLANS[planId as keyof typeof PRICING_PLANS];

    // Create Razorpay order
    const order = await razorpay.orders.create({
      amount: planDetails.amount,
      currency: planDetails.currency,
      receipt: `order_${userId}_${Date.now()}`,
      notes: {
        userId,
        plan: planDetails.plan,
        interval: planDetails.interval,
      },
    });

    // Save order to Firestore
    await db.collection('payments').doc(order.id).set({
      userId,
      orderId: order.id,
      amount: planDetails.amount,
      currency: planDetails.currency,
      status: 'created',
      plan: planDetails.plan,
      interval: planDetails.interval,
      createdAt: new Date(),
    });

    res.json({
      orderId: order.id,
      amount: order.amount,
      currency: order.currency,
      key: process.env.RAZORPAY_KEY_ID,
    });
  } catch (error) {
    console.error('Error creating order:', error);
    res.status(500).json({ error: 'Failed to create order' });
  }
});

// POST - Verify payment and activate subscription
router.post('/verify-payment', verifyToken, async (req: Request, res: Response) => {
  try {
    const userId = (req as any).userId;
    const { orderId, paymentId, signature } = req.body;

    // Verify Razorpay signature
    const generatedSignature = crypto
      .createHmac('sha256', process.env.RAZORPAY_KEY_SECRET || '')
      .update(`${orderId}|${paymentId}`)
      .digest('hex');

    if (generatedSignature !== signature) {
      return res.status(400).json({ error: 'Invalid payment signature' });
    }

    // Get payment details
    const paymentDoc = await db.collection('payments').doc(orderId).get();
    if (!paymentDoc.exists) {
      return res.status(404).json({ error: 'Payment not found' });
    }

    const paymentData = paymentDoc.data()!;

    // Update payment status
    await db.collection('payments').doc(orderId).update({
      paymentId,
      razorpaySignature: signature,
      status: 'paid',
      paidAt: new Date(),
    });

    // Calculate subscription dates
    const startDate = new Date();
    const endDate = new Date();
    if (paymentData.interval === 'month') {
      endDate.setMonth(endDate.getMonth() + 1);
    } else {
      endDate.setFullYear(endDate.getFullYear() + 1);
    }

    // Create/update subscription
    const subscriptionRef = db.collection('subscriptions').doc();
    await subscriptionRef.set({
      userId,
      plan: paymentData.plan,
      status: 'active',
      startDate,
      endDate,
      paymentId,
      orderId,
      amount: paymentData.amount,
      currency: paymentData.currency,
      interval: paymentData.interval,
      autoRenew: true,
      createdAt: new Date(),
      updatedAt: new Date(),
    });

    res.json({
      success: true,
      message: 'Subscription activated successfully',
      plan: paymentData.plan,
      endDate,
    });
  } catch (error) {
    console.error('Error verifying payment:', error);
    res.status(500).json({ error: 'Failed to verify payment' });
  }
});

// POST - Check usage limits
router.post('/check-limit', verifyToken, async (req: Request, res: Response) => {
  try {
    const userId = (req as any).userId;
    const { action } = req.body; // 'ai_message', 'project_view', etc.

    // Get user's subscription
    const subscription = await getUserSubscription(userId);
    
    // Get today's usage
    const today = new Date().toISOString().split('T')[0];
    const usageDoc = await db.collection('usage_tracking').doc(`${userId}_${today}`).get();
    const usage = usageDoc.exists ? usageDoc.data()! : {
      userId,
      date: today,
      aiMessagesUsed: 0,
      projectsViewed: 0,
      roadmapsViewed: 0,
    };

    // Check limits based on plan
    const limits = getPlanLimits(subscription.plan);
    
    let canProceed = true;
    let remaining = 0;

    if (action === 'ai_message') {
      remaining = limits.aiMessages === -1 ? -1 : limits.aiMessages - usage.aiMessagesUsed;
      canProceed = limits.aiMessages === -1 || usage.aiMessagesUsed < limits.aiMessages;
    }

    res.json({
      canProceed,
      remaining,
      plan: subscription.plan,
      upgradeRequired: !canProceed,
    });
  } catch (error) {
    console.error('Error checking limit:', error);
    res.status(500).json({ error: 'Failed to check limit' });
  }
});

// Helper functions
async function getUserSubscription(userId: string) {
  const snapshot = await db.collection('subscriptions')
    .where('userId', '==', userId)
    .where('status', '==', 'active')
    .limit(1)
    .get();

  if (snapshot.empty) {
    return { plan: 'free', status: 'active' };
  }

  return snapshot.docs[0].data();
}

function getPlanLimits(plan: string) {
  const limits: any = {
    free: { aiMessages: 10, projectsAccess: 5, roadmapsAccess: 3 },
    pro: { aiMessages: 100, projectsAccess: -1, roadmapsAccess: -1 },
    premium: { aiMessages: -1, projectsAccess: -1, roadmapsAccess: -1 },
  };
  return limits[plan] || limits.free;
}

export default router;
```

