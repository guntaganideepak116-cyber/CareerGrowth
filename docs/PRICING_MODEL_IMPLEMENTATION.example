          <div>
            <p className="font-semibold">Upgrade to unlock unlimited features</p>
            <p className="text-sm opacity-90">Get 100+ AI messages, all roadmaps, and more!</p>
          </div>
        </div>
        <Link to="/pricing">
          <Button variant="secondary">Upgrade Now</Button>
        </Link>
      </div>
    </div>
  );
}
